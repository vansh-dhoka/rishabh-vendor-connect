NODE_ENV=production
PORT=10000

# Database - will be set by Render
DATABASE_URL=

# JWT Secret - will be generated by Render
JWT_SECRET=

# AWS S3 Configuration (optional - for file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=rishabh-vendor-connect-uploads

# File Storage - using ephemeral storage for free tier (resets on restart)
STORAGE_TYPE=local
UPLOAD_DIR=/tmp/uploads
PDF_STORAGE_DIR=/tmp/pdfs

# Frontend URL for CORS
FRONTEND_URL=https://rishabh-vendor-connect-frontend.onrender.com

# Security
NODE_ENV=production
